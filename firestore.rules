rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read-only access to tracks and their licenses
    match /tracks/{trackId} {
      allow read: if true;
      allow write: if false; // Or add your own security logic here

      // Allow public read on the 'licenses' subcollection
      match /licenses/{licenseId} {
        allow read: if true;
        allow write: if false;
      }
    }

    // Allow public read on user profiles
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId; // Allow users to write to their own doc
    }

    // Deny all other access by default
    // IMPORTANT: This rule is implicitly applied, but it's good to be explicit.
    // Make sure it doesn't override the more specific rules above.
    // By placing the specific rules first, they take precedence.
  }
}
