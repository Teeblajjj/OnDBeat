rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read-only access to tracks and user profiles
    match /tracks/{trackId} {
      allow read: if true;
      allow write: if false; // Or add your own security logic here
    }
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId; // Allow users to write to their own doc
    }
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
